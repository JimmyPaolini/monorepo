{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "defaultBase": "main",
  "plugins": [
    {
      "plugin": "@nx/vite/plugin",
      "options": {
        "buildTargetName": "build",
        "devTargetName": "develop",
        "e2eTestTargetName": false,
        "previewTargetName": false,
        "serveStaticTargetName": false,
        "serveTargetName": false,
        "typecheckTargetName": "typecheck",
        "buildDepsTargetName": false,
        "watchDepsTargetName": false
      }
    },
    {
      "plugin": "@nx/eslint/plugin",
      "options": {
        "targetName": "lint"
      }
    }
  ],
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "production": [
      "default",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/.eslintrc.json",
      "!{projectRoot}/jest.config.[jt]s",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/vitest.config.base.ts",
      "!{projectRoot}/src/test-setup.[jt]s"
    ],
    "sharedGlobals": [
      "{workspaceRoot}/nx.json",
      "{workspaceRoot}/tsconfig.base.json",
      "{workspaceRoot}/pnpm-lock.yaml",
      "{workspaceRoot}/.github/workflows/*.yml"
    ]
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"],
      "cache": true
    },
    "test": {
      "inputs": ["default", "^production"],
      "cache": true
    },
    "lint": {
      "inputs": ["default", "{workspaceRoot}/eslint.config.base.mjs"],
      "cache": true,
      "defaultConfiguration": "check",
      "configurations": {
        "check": {},
        "write": {
          "args": "--fix"
        }
      }
    },
    "format": {
      "inputs": [
        "default",
        "{workspaceRoot}/.prettierrc.js",
        "{workspaceRoot}/.prettierignore"
      ],
      "cache": true,
      "defaultConfiguration": "write",
      "configurations": {
        "write": {
          "args": "--write"
        },
        "check": {
          "args": "--check"
        }
      }
    },
    "typecheck": {
      "inputs": [
        "default",
        "^production",
        { "externalDependencies": ["typescript"] }
      ],
      "cache": true
    },
    "markdown-lint": {
      "inputs": [
        "default",
        "{workspaceRoot}/.markdownlintrc.json",
        "{workspaceRoot}/.markdownlintignore"
      ],
      "cache": true,
      "defaultConfiguration": "check",
      "configurations": {
        "check": {},
        "write": {
          "args": "--fix"
        }
      }
    }
  },
  "parallel": 3,
  "cacheDirectory": ".nx/cache",
  "projects": {
    "monorepo": {
      "tags": ["scripts"]
    },
    "caelundas": {
      "tags": []
    }
  },
  "generators": {
    "@nx/react": {
      "application": {
        "babel": true,
        "style": "tailwind",
        "linter": "eslint",
        "bundler": "vite"
      },
      "component": {
        "style": "tailwind"
      },
      "library": {
        "style": "tailwind",
        "linter": "eslint"
      }
    }
  }
}
