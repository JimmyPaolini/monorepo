{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "defaultBase": "main",
  "tui": {
    "enabled": false
  },
  "plugins": [
    {
      "plugin": "@nx/vite/plugin",
      "options": {
        "buildTargetName": "build",
        "devTargetName": "develop",
        "e2eTestTargetName": false,
        "previewTargetName": false,
        "serveStaticTargetName": false,
        "serveTargetName": false,
        "typecheckTargetName": "typecheck",
        "buildDepsTargetName": false,
        "watchDepsTargetName": false
      }
    },
    {
      "plugin": "@nx/eslint/plugin",
      "options": {
        "targetName": "lint"
      }
    }
  ],
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "production": [
      "default",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/.eslintrc.json",
      "!{projectRoot}/jest.config.[jt]s",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/vitest.config.base.ts",
      "!{projectRoot}/src/test-setup.[jt]s"
    ],
    "sharedGlobals": [
      "{workspaceRoot}/nx.json",
      "{workspaceRoot}/tsconfig.base.json",
      "{workspaceRoot}/pnpm-lock.yaml",
      "{workspaceRoot}/.github/workflows/*.yml"
    ]
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"],
      "cache": true
    },
    "test": {
      "inputs": ["default", "^production"],
      "cache": true
    },
    "lint": {
      "inputs": [
        "default",
        "{workspaceRoot}/eslint.config.base.ts",
        "{projectRoot}/**/*.md"
      ],
      "cache": true,
      "defaultConfiguration": "check",
      "configurations": {
        "check": {},
        "write": {
          "args": "--fix"
        }
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "prettier {args} {projectRoot}"
      },
      "inputs": [
        "default",
        "{workspaceRoot}/.prettierrc.js",
        "{workspaceRoot}/.prettierignore"
      ],
      "cache": true,
      "defaultConfiguration": "write",
      "configurations": {
        "write": {
          "args": "--write"
        },
        "check": {
          "args": "--check"
        }
      },
      "description": "Format files with Prettier"
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit",
        "cwd": "{projectRoot}"
      },
      "inputs": [
        "default",
        "^production",
        { "externalDependencies": ["typescript"] }
      ],
      "cache": true,
      "description": "Type-check with TypeScript"
    },
    "knip": {
      "executor": "nx:run-commands",
      "options": {
        "command": "NODE_OPTIONS='--import=tsx/esm' knip --workspace {projectRoot}",
        "cwd": "{workspaceRoot}"
      },
      "inputs": ["default", "{workspaceRoot}/knip.json"],
      "cache": true,
      "defaultConfiguration": "check",
      "configurations": {
        "check": {
          "command": "NODE_OPTIONS='--import=tsx/esm' knip --workspace {projectRoot}"
        },
        "write": {
          "command": "NODE_OPTIONS='--import=tsx/esm' knip --fix --workspace {projectRoot}"
        }
      },
      "description": "Check for unused files, dependencies, and exports"
    },
    "static-code-analysis": {
      "executor": "nx:run-commands",
      "cache": true,
      "defaultConfiguration": "check",
      "configurations": {
        "check": {
          "parallel": true
        },
        "write": {
          "parallel": false
        }
      },
      "description": "Run all static code analysis tools"
    },
    "dependency-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "depcruise {projectRoot}/src --config .dependency-cruiser.cjs",
        "cwd": "{workspaceRoot}"
      },
      "inputs": [
        "default",
        "^default",
        "{projectRoot}/**/*.ts",
        "{projectRoot}/**/*.tsx",
        "{workspaceRoot}/.dependency-cruiser.cjs"
      ],
      "cache": true,
      "description": "Validate dependency architecture"
    },
    "type-coverage": {
      "executor": "nx:run-commands",
      "options": {
        "command": "type-coverage --detail > type-coverage-report.txt 2>&1 || (cat type-coverage-report.txt && exit 1)",
        "cwd": "{projectRoot}"
      },
      "inputs": [
        "default",
        "{projectRoot}/**/*.ts",
        "{projectRoot}/**/*.tsx",
        "{projectRoot}/tsconfig.json"
      ],
      "cache": true,
      "description": "Check TypeScript type coverage"
    },
    "spell-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cspell '{projectRoot}/**/*.{ts,tsx,js,jsx,md,yaml,yml,json}' --no-progress",
        "cwd": "{workspaceRoot}"
      },
      "inputs": [
        "default",
        "{projectRoot}/**/*.{ts,tsx,js,jsx,md,yaml,yml,json}",
        "{workspaceRoot}/cspell.config.yaml"
      ],
      "cache": true,
      "description": "Check spelling in project files"
    }
  },
  "parallel": 3,
  "cacheDirectory": ".nx/cache",
  "projects": {
    "monorepo": {
      "tags": ["scripts"]
    },
    "caelundas": {
      "tags": []
    }
  },
  "generators": {
    "@nx/react": {
      "application": {
        "babel": true,
        "style": "tailwind",
        "linter": "eslint",
        "bundler": "vite"
      },
      "component": {
        "style": "tailwind"
      },
      "library": {
        "style": "tailwind",
        "linter": "eslint"
      }
    }
  }
}
