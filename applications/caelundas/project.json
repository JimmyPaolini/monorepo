{
  "name": "caelundas",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "applications/caelundas",
  "projectType": "application",
  "tags": [],
  "targets": {
    "dependency-check": {
      "description": "Validate dependency architecture"
    },
    "develop": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm develop",
        "cwd": "applications/caelundas"
      },
      "description": "Run Caelundas locally with .env file"
    },
    "docker-build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker buildx build --platform linux/amd64 -f applications/caelundas/Dockerfile -t caelundas:1.0.0 -t ghcr.io/jimmypaolini/caelundas:1.0.0 --load .",
        "cwd": "{workspaceRoot}"
      },
      "description": "Build Docker image for linux/amd64 and load it locally"
    },
    "docker-push": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker buildx build --platform linux/amd64 -f applications/caelundas/Dockerfile -t ghcr.io/jimmypaolini/caelundas:1.0.0 --push .",
        "cwd": "{workspaceRoot}"
      },
      "description": "Build and push Docker image to GitHub Container Registry"
    },
    "format": {
      "description": "Format files in the project with Prettier"
    },
    "helm-uninstall": {
      "executor": "nx:run-commands",
      "options": {
        "command": "./applications/caelundas/scripts/helm-uninstall.sh",
        "cwd": "{workspaceRoot}"
      },
      "description": "Uninstall a Caelundas Helm release and clean up PVC (requires release name argument)"
    },
    "helm-upgrade": {
      "executor": "nx:run-commands",
      "options": {
        "command": "./applications/caelundas/scripts/helm-upgrade.sh",
        "cwd": "{workspaceRoot}"
      },
      "description": "Deploy Caelundas job with Helm with auto-generated release name"
    },
    "knip": {
      "description": "Check for unused files, dependencies, and exports"
    },
    "kubernetes-copy-files": {
      "executor": "nx:run-commands",
      "options": {
        "command": "./applications/caelundas/scripts/kubernetes-copy-files.sh",
        "cwd": "{workspaceRoot}"
      },
      "description": "Copy files from a completed Caelundas job (requires release name argument)"
    },
    "kubernetes-list-files": {
      "executor": "nx:run-commands",
      "options": {
        "command": "./applications/caelundas/scripts/kubernetes-list-files.sh",
        "cwd": "{workspaceRoot}"
      },
      "description": "List files in a Caelundas job's PVC (requires release name argument)"
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm start",
        "cwd": "applications/caelundas"
      },
      "description": "Start the Caelundas application"
    },
    "static-code-analysis": {
      "options": {
        "commands": [
          "nx run caelundas:typecheck",
          "nx run caelundas:lint:{args.configuration}",
          "nx run caelundas:format:{args.configuration}",
          "nx run caelundas:knip:{args.configuration}",
          "nx run caelundas:type-coverage",
          "nx run caelundas:dependency-check"
        ]
      },
      "description": "Run all static code analysis tools (typecheck, lint, format, knip, type-coverage, dependency-check)"
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm test",
        "cwd": "applications/caelundas"
      },
      "description": "Run all tests"
    },
    "test:watch": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm test:watch",
        "cwd": "applications/caelundas"
      },
      "description": "Run tests in watch mode"
    },
    "test:coverage": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm test:coverage",
        "cwd": "applications/caelundas"
      },
      "description": "Run tests with coverage report"
    },
    "test:unit": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm test:unit",
        "cwd": "applications/caelundas"
      },
      "description": "Run unit tests only"
    },
    "test:integration": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm test:integration",
        "cwd": "applications/caelundas"
      },
      "description": "Run integration tests only"
    },
    "test:end-to-end": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm test:end-to-end",
        "cwd": "applications/caelundas"
      },
      "description": "Run end-to-end tests only"
    },
    "type-coverage": {
      "description": "Check TypeScript type coverage"
    },
    "typecheck": {
      "description": "Type-check the application without emitting files"
    }
  }
}
