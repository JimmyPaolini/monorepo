# ==============================================================================
# Caelundas Default Environment Variables
# ==============================================================================
# Copy this file to .env and customize for your local environment.
# The .env file is gitignored and will not be committed.

# Output Directory
# Directory where calendar files will be written
# Default: ./calendars (local) or /app/data/calendars (Kubernetes)
OUTPUT_DIR=./calendars

# Location (for solar/lunar cycles and twilights)
# Rittenhouse Square, Philadelphia, PA (default)
LATITUDE=39.949309
LONGITUDE=-75.17169

# Date Range
# Format: YYYY-MM-DD
START_DATE=2025-01-01
END_DATE=2025-12-31

# Timezone
# Used for date parsing and display
TIMEZONE=America/New_York

# Retry Configuration (for ephemeris API requests)
MAX_RETRIES=5
INITIAL_DELAY_MS=1000
MAX_DELAY_MS=30000
BACKOFF_MULTIPLIER=2
