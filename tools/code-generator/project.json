{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "code-generator",
  "projectType": "library",
  "sourceRoot": "tools/code-generator/src",
  "prefix": "lib",
  "tags": ["type:util"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "echo 'code-generator is a development tool and does not require building'"
      },
      "cache": true,
      "description": "No-op build target for development tool"
    },
    "dependency-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "depcruise tools/code-generator/src --config .dependency-cruiser.cjs",
        "cwd": "{workspaceRoot}"
      },
      "cache": true,
      "inputs": [
        "default",
        "^default",
        "{projectRoot}/**/*.ts",
        "{projectRoot}/**/*.tsx",
        "{workspaceRoot}/.dependency-cruiser.cjs"
      ],
      "description": "Validate dependency architecture"
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "prettier {args} tools/code-generator"
      },
      "description": "Format files in the generator with Prettier"
    },
    "knip": {
      "executor": "nx:run-commands",
      "options": {
        "command": "NODE_OPTIONS='--import=tsx/esm' knip --workspace tools/code-generator",
        "cwd": "{workspaceRoot}"
      },
      "configurations": {
        "check": {
          "command": "NODE_OPTIONS='--import=tsx/esm' knip --workspace tools/code-generator"
        },
        "write": {
          "command": "NODE_OPTIONS='--import=tsx/esm' knip --fix --workspace tools/code-generator"
        }
      },
      "defaultConfiguration": "check",
      "cache": true,
      "description": "Check for unused files, dependencies, and exports"
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint tools/code-generator --no-error-on-unmatched-pattern --ignore-pattern '**/code-generator/**/files/**'"
      },
      "inputs": ["default", "{workspaceRoot}/eslint.config.base.mjs"]
    },
    "static-code-analysis": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx run code-generator:typecheck",
          "nx run code-generator:lint:{args.configuration}",
          "nx run code-generator:format:{args.configuration}",
          "nx run code-generator:knip:{args.configuration}",
          "nx run code-generator:type-coverage",
          "nx run code-generator:dependency-check"
        ]
      },
      "configurations": {
        "check": {
          "parallel": true
        },
        "write": {
          "parallel": false
        }
      },
      "defaultConfiguration": "check",
      "cache": true,
      "description": "Run all static code analysis tools (typecheck, lint, format, knip, type-coverage, dependency-check)"
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest run {args.args}",
        "cwd": "tools/code-generator"
      }
    },
    "type-coverage": {
      "executor": "nx:run-commands",
      "options": {
        "command": "type-coverage --detail > type-coverage-report.txt 2>&1 || (cat type-coverage-report.txt && exit 1)",
        "cwd": "tools/code-generator"
      },
      "cache": true,
      "inputs": [
        "default",
        "{projectRoot}/**/*.ts",
        "{projectRoot}/**/*.tsx",
        "{projectRoot}/tsconfig.json"
      ],
      "description": "Check TypeScript type coverage"
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit",
        "cwd": "tools/code-generator"
      },
      "description": "Type-check the generator"
    }
  }
}
