{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "types": ["node", "vite/client"],
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "vite.config.mts"],
  "exclude": [
    "src/components",
    "src/lib/utils",
    "src/components/ui",
    "src/lib",
    "src/hooks"
  ]
}
