{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "jsx": "react-jsx",
    "lib": [ "DOM", "DOM.Iterable","ES2022"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "../../dist/out-tsc",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node", "vite/client"]
  },
  "exclude": [
    "src/components",
    "src/components/ui",
    "src/hooks",
    "src/lib",
    "src/lib/utils"
  ],
  "extends": "../../tsconfig.base.json",
  "include": [
    "eslint.config.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "vite.config.mts"
  ]
}
