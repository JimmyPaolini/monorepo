{
  "name": "lexico-components",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/lexico-components/src",
  "projectType": "library",
  "tags": ["type:lib", "scope:shared", "framework:react"],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/lexico-components"
      }
    },
    "bundlesize": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "npx size-limit",
        "cwd": "packages/lexico-components"
      },
      "cache": true,
      "inputs": ["default", "{workspaceRoot}/dist/packages/lexico-components/**/*"],
      "description": "Check bundle size limits"
    },
    "dependency-check": {
      "description": "Validate dependency architecture"
    },
    "format": {
      "description": "Format files in the package with Prettier"
    },
    "knip": {
      "description": "Check for unused files, dependencies, and exports"
    },
    "static-code-analysis": {
      "options": {
        "commands": [
          "nx run lexico-components:typecheck",
          "nx run lexico-components:lint:{args.configuration}",
          "nx run lexico-components:format:{args.configuration}",
          "nx run lexico-components:knip:{args.configuration}",
          "nx run lexico-components:type-coverage",
          "nx run lexico-components:dependency-check"
        ]
      },
      "description": "Run all static code analysis tools (typecheck, lint, format, knip, type-coverage, dependency-check)"
    },
    "type-coverage": {
      "description": "Check TypeScript type coverage"
    },
    "typecheck": {
      "description": "Type-check the library"
    }
  }
}
