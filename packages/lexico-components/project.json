{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "lexico-components",
  "projectType": "library",
  "sourceRoot": "packages/lexico-components/src",
  "tags": [ "framework:react", "scope:shared","type:lib"],
  "targets": {
    "biome": {},
    "build": {
      "executor": "@nx/vite:build",
      "options": {
        "outputPath": "dist/packages/lexico-components"
      },
      "outputs": ["{options.outputPath}"]
    },
    "bundlesize": {
      "cache": true,
      "dependsOn": ["build"],
      "description": "Check bundle size limits",
      "executor": "nx:run-commands",
      "inputs": [ "{workspaceRoot}/dist/packages/lexico-components/**/*","default"],
      "options": {
        "command": "npx size-limit",
        "cwd": "packages/lexico-components"
      }
    },
    "code-analysis": {
      "options": {
        "commands": [
          "nx run lexico-components:dependency-analysis",
          "nx run lexico-components:format:{args.configuration}",
          "nx run lexico-components:knip:{args.configuration}",
          "nx run lexico-components:lint:{args.configuration}",
          "nx run lexico-components:markdown-lint:{args.configuration}",
          "nx run lexico-components:spell-check",
          "nx run lexico-components:type-coverage",
          "nx run lexico-components:typecheck",
          "nx run lexico-components:yaml-lint"
        ]
      }
    },
    "dependency-analysis": {},
    "format": {},
    "knip": {},
    "lint": {
      "options": {
        "commands": [
          "nx run lexico-components:eslint:{args.configuration}",
          "nx run lexico-components:oxlint:{args.configuration}",
          "nx run lexico-components:stylelint:{args.configuration}"
        ]
      }
    },
    "markdown-lint": {},
    "oxlint": {},
    "prettier": {},
    "spell-check": {},
    "stylelint": {},
    "type-coverage": {},
    "typecheck": {},
    "yaml-lint": {}
  }
}
