{
  "name": "lexico-components",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/lexico-components/src",
  "projectType": "library",
  "tags": ["type:lib", "scope:shared", "framework:react"],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/lexico-components"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit -p tsconfig.lib.json",
        "cwd": "packages/lexico-components"
      },
      "description": "Type-check the library"
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "prettier {args} packages/lexico-components"
      },
      "description": "Format files in the package with Prettier"
    }
  }
}
